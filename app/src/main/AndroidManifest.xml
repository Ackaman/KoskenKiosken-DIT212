<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dit212.group1.koskenkiosken">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controllers.AuthenticationController.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.MainController.MainActivity"
            android:parentActivityName=".Controllers.AuthenticationController.LoginActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Controllers.MainController.ProductPressedView" />
        <activity android:name=".Controllers.MainController.ProductRecommendationsFragment" />

    </application>

</manifest>